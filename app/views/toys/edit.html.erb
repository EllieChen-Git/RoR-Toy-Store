<h1>Edit Toy: <%= @toy_id[:id] %></h1>

<form action="<%= toy_path(params[:id]) %>" method="POST">
    <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token" />
    <input type="hidden" name="_method" value="patch" />

    <div>
        <label for="name">Name</label>
        <input type="text" name="toy[name]" id="name"/>
    </div>
    <div>
        <label for="description">Description</label>
        <input type="text" name="toy[description]" id="description" />
    </div>
    <div>
        <label for="date">Date</label>
        <input type="date" name="toy[date]" id="date" />
    </div>
    <div>
        <label for="user">User</label>
        <input type="text" name="toy[user]" id="user" />
    </div>

    <input type="submit" value="Edit this toy" />
</form>